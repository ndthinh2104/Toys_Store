@model Models.Framework.product
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 padding-right">
                <div class="product-details">
                    <!--product-details-->
                    <div class="col-sm-5">
                        <div class="view-product">
                            <img src="~/Assets/@Model.big_photo" alt="" />
                        </div>
                        <div id="similar-product" class="carousel slide" data-ride="carousel">

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item active">
                                    <a href=""><img src="@Model.photo_1" alt=""></a>
                                    <a href=""><img src="@Model.photo_2" alt=""></a>
                                    <a href=""><img src="@Model.photo_3" alt=""></a>
                                </div>
                            </div>

                            <!-- Controls -->
                            <a class="left item-control" href="#similar-product" data-slide="prev">
                                <i class="fa fa-angle-left"></i>
                            </a>
                            <a class="right item-control" href="#similar-product" data-slide="next">
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </div>

                    </div>
                    <div class="col-sm-7">
                        <div class="product-information">
                            <!--/product-information-->
                            <h2>@Model.name</h2>
                            <p>ID: @Model.id</p>
                            <span>
                                <span>150.000 VNĐ</span>
                                <label>Số lượng:</label>
                                <input type="text" value="" />
                            </span>
                            <p><b>Thương hiệu:</b> @Model.manufacturer.name</p>
                            <a href="/gio-hang?productId=@Model.id&amount=1">
                                <i class="fa fa-shopping-cart"></i>
                                Thêm vào giỏ hàng
                            </a>

                        </div><!--/product-information-->
                    </div>
                </div><!--/product-details-->

                <div class="category-tab shop-details-tab">
                    <!--category-tab-->
                    <div class="col-sm-12">
                        <p></p>
                    </div>
                </div><!--/category-tab-->
            </div>
        </div>
    </div>
</section>

